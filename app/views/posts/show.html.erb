<div class="container mt-4">
  <div class="row">
    <div class="col-lg-12 mx-auto">
          <div class="media-container">
            <% if @post.youtube_video_id.present? %>
              <!-- YouTube動画の埋め込み表示 -->
              <div class="youtube-container">
                <iframe 
                  src="<%= @post.youtube_embed_url %>" 
                  width="100%" 
                  height="500" 
                  frameborder="0" 
                  allowfullscreen
                  class="rounded">
                </iframe>
              </div>
            <% elsif @post.image.attached? %>
              <!-- 書籍の画像表示 -->
              <div class="image-container text-center">
                <%= image_tag @post.image.variant(resize_to_limit: [600, 600]), 
                                                  alt: @post.title, 
                                                  class: "book-cover-image" %>
              </div>
            <% end %>
          </div>
          <div class="card mt-2">
            <div class="post-info">
              <div class= "form-control">
                <!-- タイトル -->
                <div class="post-title">
                  <h1 class="card-title h2 mb-3"><%= @post.title %></h1>
                </div>

                <!-- 投稿者情報 -->
                <div class="mb-3">
                  <small class="text-muted">
                    <i class="far fa-user me-2"></i>
                    投稿者: <%= @post.user.name %>
                  </small>
                  <small class="text-muted ms-3">
                    <i class="far fa-clock me-2"></i>
                    投稿日: <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
                  </small>
                </div>
              
                <!-- レビュー本文 -->
                <div class="card-text">
                  <%= simple_format(@post.review_text) %>
                </div>
                
                <!-- YouTube URL表示 -->
                <% if @post.video_url.present? %>
                  <div class="mt-3">
                    <small class="text-muted">
                      <i class="fab fa-youtube me-2"></i>
                      YouTube URL: 
                      <%= link_to @post.video_url, @post.video_url, 
                                  target: '_blank', 
                                  class: 'text-decoration-none' %>
                    </small>
                  </div>
                <% end %>
              </div>

              <!-- アクションボタン -->
              <div class="mt-3">
                <%# ログインしている状態のみ表示する %>
                <% if user_signed_in? && @post.user == current_user %>
                  <div>
                    <%= link_to '編集', edit_post_path(@post), 
                                class: 'btn btn-primary me-2' %>
                    <%= link_to '削除', post_path(@post), 
                                data: { 
                                  turbo_method: :delete , 
                                  turbo_confirm: '本当に削除しますか？',
                                },
                                class: 'btn btn-danger me-2' %>
                    <%= link_to '一覧に戻る', posts_path, 
                            class: 'btn btn-secondary' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

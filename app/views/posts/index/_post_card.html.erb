<div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
  <%= link_to post_path(post), class: "text-decoration-none" do %>
    <div class="post-card">
      <%# サムネイル呼び出し %>
      <%= render 'posts/index/post_image', post: post %>
      <%# オーバーレイ情報呼び出し %>
      <%= render 'posts/index/post_info', post: post %>
    </div>
  <% end %>
</div>

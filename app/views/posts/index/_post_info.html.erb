<%# オーバーレイ情報 %>
<div class="post-info">
  <h6 class="post-title text-center"><%= truncate(post.title) %></h6>
  
  <div class="d-flex justify-content-between align-items-center">
    <%# 投稿日 %>
    <small class="text-muted">
      <%= post.created_at&.strftime("%Y年%m月%d日") %>
    </small>

    <%# ★評価 %>
    <%= post.rating_stars %>

    <%# バッジ %>
    <% if post.category.present? %>
      <span class="badge">
        <%= post.category %>
      </span>
    <% end %>
  </div>
</div>

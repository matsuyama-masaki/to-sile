<%# 動画、画像表示処理 %>
<% if post.youtube_video_id.present? %>
  <div class="mb-3">
    <iframe 
      src="<%= post.youtube_embed_url %>" 
      width="100%" 
      height="500" 
      frameborder="0" 
      allowfullscreen
      class="rounded">
    </iframe>
  </div>
<% elsif post.image.attached? %>
  <div class="image-container text-center mb-3">
    <%= image_tag post.image.variant(resize_to_limit: [600, 600]), 
                  alt: post.title,
                class: "img-fluid rounded" %>
  </div>
<% end %>

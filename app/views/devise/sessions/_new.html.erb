<%# ログイン %>
<div class="card-body">
  <h2 class="card-title"><%= t('.heading')%></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
      <%# Eメール %>
      <div class="mb-1 text-left form-label fw-bold">
        <%= f.label :email %><br />
      </div>
      <%# Eメールフィールド %>
      <div class="mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
      </div>
      <%# パスワード %>
      <div class="mb-1 text-left form-label fw-bold">
        <%= f.label :password %><br />
      </div>
      <%# パスワードフィールド %>
      <div class="mb-2">
        <%= f.password_field :password, 
                              autocomplete: "current-password", 
                              class: "form-control" %>
      </div>
      <%# ログイン状態を記憶する %>
      <% if devise_mapping.rememberable? %>
        <div class="mb-3 text-left form-label fw-bold">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%# ログインボタン %>
      <div class="mb-3 mt-3 text-center fw-bold">
        <%= f.submit t('.sign_in'), class: "btn btn-primary" %>
      </div>
    <% end %>
  <%# リンク %>
  <div class="mb-3 text-center fw-bold">
    <%= render "devise/shared/links" %>
  </div>
</div>

<%# アカウント登録 %>
<div class="card-body">
  <h2 class="card-title"><%= t('.heading')%></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
    <%# ユーザ名 %>
    <div class="mb-1 text-left form-label fw-bold">
      <%= f.label :name %><br />
    </div>
    <%# ユーザ名フィールド %>
    <div class="mb-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
    <%# メールアドレス %>
    <div class="mb-1 text-left form-label fw-bold">
      <%= f.label :email %><br />
    </div>
    <%# メールアドレスフィールド %>
    <div class="mb-3">
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
    <%# パスワード %>
    <div class="mb-1 text-left form-label fw-bold">
      <%= f.label :password %>
    </div>
    <%# パスワードフィールド %>
    <div class="mb-3">
      <%= f.password_field :password, 
        autocomplete: "new-password", 
        class: "form-control", 
        placeholder: "#{@minimum_password_length} #{t('.password_rule')}" %>
    </div>
    <%# パスワード確認 %>
    <div class="mb-1 text-left form-label fw-bold">
      <%= f.label :password_confirmation %><br />
    </div>
    <%# パスワード確認フィールド %>
    <div class="mb-3">
      <%= f.password_field :password_confirmation,
        autocomplete: "new-password", 
        class: "form-control",
        placeholder: "#{t('.password_confirmation_rule')}" %>
    </div>
    <%# アカウント登録ボタン %>
    <div class="mb-3 mt-3 text-center">
      <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
    </div>
  <% end %>
  <%# リンク %>
  <div class="mb-3 text-center fw-bold">
    <%= render "devise/shared/links" %>
  </div>
</div>

<div class="mb-5 mt-5 border p-5 col-md-6 offset-md-3 bg-light rounded shadow col-sm-10 offset-sm-1">
  <h2 class="text-center pb-4 fw-bold">アカウント登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <%# ユーザ名 %>
  <div class="mb-1 text-left">
    <%= f.label :name %><br />
  </div>
  <div class="mb-3">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>
  
  <%# メールアドレス %>
  <div class="mb-1 text-left">
    <%= f.label :email %><br />
  </div>
  <div class="mb-3">
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>
  
  <%# パスワード %>
  <div class="mb-1 text-left">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 桁以上で半角英数字のみ)</em>
    <% end %><br />
  </div>
  <div class="mb-3">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>
  
  <%# パスワード確認 %>
  <div class="mb-1 text-left">
    <%= f.label :password_confirmation %><br />
  </div>
  <div class="mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
  
  <%# 登録ボタン %>
  <div class="mb-4 mt-4 text-center">
    <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
  </div>
  <% end %>
  
  <%# ログイン画面へのリンク %>
  <div class="mb-3 text-center">
  <%= render "devise/shared/links" %>
  </div>
</div>
